<% content_for :title do 'Интернет магазин женской одежды HM в Украине. Купить одежду, купить обувь и аксессуары для женщин онлайн в HM' end %>
<% content_for :description do 'Добро пожаловать в интернет магазин женской одежды H+M. Мы предлагаем актуальную, качественную и недорогую по цене одежду из экологичных материалов.' end%>

<main role="main" class="responsive segments">
	<!-- Main -->
	<!--AEMPUBPRDEU35-->
	<div class="layout">
		<div class="parsys main">
			<div class="ghost section"></div>
			<%if @baners[0]%>
			<section class="segment section singleteasercontainer">
					<%= @baners[0].text.html_safe %>
			</section>
			<%end%>
			<div class="parbase newarrivalscontainer section">

				<section class="segment new-arrivals">
					<h2 class="heading"></h2>
					<div class="four modules">
					<% if @product_datum[0..3]%>
						<% @product_datum[0..3].each do |pd| %>
						<% product = pd.product %>
							<% if product and pd%>
							<div class="department-product-item">
								<article class="product-item" data-articlecode="" data-newarrivals-first-article="" data-activity-type="" data-activity-code="" data-promotion-creative="" onclick="">
									<!-- Product item -->
									<%= link_to "/single/hm-#{pd.article}" , class: "product-item-link" do %>
										<%=image_tag(pd.photos[-1].img.url(:medium), width:"260" , height:"390" , alt:product.name , class:"product-item-image" )%>
									<%end%>
									<div class="product-item-details">
										<h3 class="product-item-heading">
											<%= link_to product.name,"/single/hm-#{pd.article}" %>
										</h3>
										<% if pd!=nil and pd.price!=nil %>
													<%if pd.promotional_price? %>
														<strong class="price sale-price"> <%=pd.get_promotional_price%> Грн
															<span class="price original-price"><%= pd.get_price%> Грн</span>
														</strong>
													<%else%>
													<strong class="price"><%= pd.get_price%> Грн</strong>
													<%end%>
												<%else%>
													<strong class="price">Уточняеться</strong>
										<% end %>

									</div>
								</article>
								<!-- /Product item -->
							</div>
							<% end %>
						<% end %>
					<% end %>

					</div>
				</section>
			</div>
			<%if @baners[1]%>
			<section class="segment section">
				<%= @baners[1].text.html_safe %>
			</section>
			<%end%>
			<%if @baners[2] %>
			<section class="segment section">
					<%=@baners[2].text.html_safe%>
			</section>
			<% end %>
			<%if @baners[3] %>
			<section class="segment section">
					<%=@baners[3].text.html_safe%>
			</section>
			<% end %>
			<%if @baners[4] %>
			<section class="segment section singleteasercontainer">
					<%=@baners[4].text.html_safe%>
			</section>
			<%end%>
			<div class="parbase newarrivalscontainer section">

				<section class="segment new-arrivals">
					<h2 class="heading"></h2>
					<div class="four modules">
					<% if @product_datum[4..-1]%>
						<% @product_datum[4..-1].each do |pd| %>
							<% product = pd.product %>
							<% if product and pd%>
														<div class="department-product-item">
								<article class="product-item" data-articlecode="" data-newarrivals-first-article="" data-activity-type="" data-activity-code="" data-promotion-creative="" onclick="">
									<!-- Product item -->
									<%= link_to "/single/hm-#{pd.article}"  , class: "product-item-link" do %>
										<%=image_tag(pd.photos[-1].img.url(:medium), width:"260" , height:"390" , alt:product.name , class:"product-item-image" )%>
									<%end%>
									<div class="product-item-details">
										<h3 class="product-item-heading">
											<%= link_to product.name,"/single/hm-#{pd.article}"  %>
										</h3>
										<% if pd!=nil and pd.price!=nil %>
													<%if pd.promotional_price? %>
														<strong class="price sale-price"> <%=pd.get_promotional_price%> Грн
															<span class="price original-price"><%= pd.get_price%> Грн</span>
														</strong>
													<%else%>
													<strong class="price"><%= pd.get_price%> Грн</strong>
													<%end%>
												<%else%>
													<strong class="price">Уточняеться</strong>
										<% end %>

									</div>
								</article>
								<!-- /Product item -->
							</div> 
							<% end %> 
						<% end %>
					<% end %>
					</div>
				</section>
			</div>
		</div>
	</div>
	<div class="parbase overlaycontainer"></div>
</main>