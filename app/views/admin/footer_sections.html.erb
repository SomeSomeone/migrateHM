<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
<div class="col-lg-12">
<div class="ibox float-e-margins">
<div class="ibox-title">
    <h5>Все категории</h5>
    <div class="ibox-tools">
        <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>
</div>
<div class="ibox-content">
<table class="table table-striped table-bordered table-hover dataTables-example">
<thead>
<tr>
    <th>id</th>
    <th>Порядок</th>
    <td>Текст</td>
    <th>Виден гостям?</th>
    <th>Виден ?</th>
    <th>Обновить</th>
    <th>Удалить</th>
</tr>
</thead>
<tbody>
<% @footer_sections.each do | footer_section | %>
<tr class="gradeX">
    <td><%=footer_section.id %></td>
    <td><%=footer_section.order %></td>
    <td><%=(footer_section.text||"").html_safe %></td>
    <td>
    <% if footer_section.see_all %>
        да
    <% else %>        
        нет
    <% end %>
    </td>
    <td>
    <% if footer_section.visible %>
        да
    <% else %>        
        нет
    <% end %>
    </td>

    <td><%= link_to 'Обновить', admin_footer_section_edit_path(footer_section) %></td>
    <td><%= link_to 'Удалить', admin_footer_section_destroy_path(footer_section) , :method => 'delete', data: { confirm: 'Точно?' } %></td>
</tr>
<% end %>
</tbody>
<tfoot>
<tr>
    <th>id</th>
    <th>Порядок</th>
    <td>Текст</td>
    <th>Виден гостям?</th>
    <th>Виден ?</th>
    <th>Обновить</th>
    <th>Удалить</th>
</tr>
</tfoot>
</table>
</div>
</div>
</div>
</div>

</div>

