<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
<div class="col-lg-12">
<div class="ibox float-e-margins">
<div class="ibox-title">
    <h5>Все категории</h5>
    <div class="ibox-tools">
        <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>
</div>
<div class="ibox-content">
<table class="table table-striped table-bordered table-hover dataTables-example">
<thead>
<tr>
    <th>id</th>
    <th>Код</th>
    <td>%</td>
    <th>Количество возможных использований</th>
    <th>Срок</th>
    <th>Обновить</th>
    <th>Удалить</th>
</tr>
</thead>
<tbody>
<% @campaings.each do | campaing | %>
<tr class="gradeX">
    <td><%=campaing.id %></td>
    <td><%=campaing.code %></td>
    <td><%=campaing.value %></td>
    <td>
        <%unless campaing.inf_number%>
            <%=campaing.number %>
        <%else%>
            Бесконечно    
        <%end%>
    </td>
    <td>
        <%unless campaing.inf_period%>
            <%=campaing.period.to_s(:db) %>
        <%else%>
            Бессрочно    
        <%end%>
    </td>
    <td><%= link_to 'Обновить', admin_campaing_edit_path(campaing) %></td>
    <td><%= link_to 'Удалить', admin_campaing_destroy_path(campaing) , :method => 'delete', data: { confirm: 'Точно?' } %></td>
</tr>
<% end %>
</tbody>
<tfoot>
<tr>
    <th>id</th>
    <th>Код</th>
    <td>%</td>
    <th>Количество возможных использований</th>
    <th>Срок</th>
    <th>Обновить</th>
    <th>Удалить</th>
</tr>
</tfoot>
</table>
</div>
</div>
</div>
</div>

</div>

