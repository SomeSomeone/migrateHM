

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Создание нового кода</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>




            <div class="ibox-content">
                <%= semantic_form_for @campaing, :url => admin_campaing_create_path(@campaing) , :html => { :class => "form-horizontal"} do |f| %>
                    <p>Введите пустые поля</p>
                    <div class="form-group">
                    <%= f.label  :code , "Код" , class: "col-lg-12"%>
                        <div class="col-lg-12"><%= f.text_field :code, class: 'form-control' %><span class="help-block m-b-none">Введите код</span>
                        </div>
                    </div>
                    <div class="form-group">
                    <%= f.label  :value , "Процент скидки" , class: "col-lg-12"%>
                        <div class="col-lg-12"><%= f.number_field :value, in: 0.0..100.0, step: 0.1, class: 'form-control' %><span class="help-block m-b-none">Введите процент скидки</span>
                        </div>
                    </div>
                    <div class="form-group">
                    <%= f.label  :number , "Количество раз возможно использования" , class: "col-lg-12"%>
                        <div class="col-lg-12"><%= f.number_field :number, class: 'form-control' %><span class="help-block m-b-none">Количество раз возможно использования</span>
                        </div>
                    </div>
                    <div class="form-group">
                    <%= f.label  :inf_number , "Включить бессконечное использование " , class: "col-lg-12"%>
                        <div class="col-lg-12"><%= f.check_box :inf_number, class: 'form-control' %>
                        </div>
                    </div>
                    <div class="form-group">
                    <%= f.label  :period , "Срок" , class: "col-lg-12"%>
                        <div class="col-lg-12"><%= f.datetime_select :period, class: 'form-control' %><span class="help-block m-b-none">Срок до которого действует код</span>
                        </div>
                    </div>
                    <div class="form-group">
                    <%= f.label  :inf_period , "Включить бессрочный период" , class: "col-lg-12"%>
                        <div class="col-lg-12"><%= f.check_box :inf_period, class: 'form-control' %><span class="help-block m-b-none">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                          <%= f.submit  "Создать категорию" , :class => "btn btn-sm btn-primary"  %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>