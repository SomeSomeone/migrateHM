<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
<div class="col-lg-12">
<div class="ibox float-e-margins">
<div class="ibox-title">
    <h5>Все категории</h5>
    <div class="ibox-tools">
        <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>
</div>
<div class="ibox-content">
<table class="table table-striped table-bordered table-hover dataTables-example">
<thead>
<tr>
    <th>id</th>
    <td>Имя</td>
    <td>%</td>
    <th>Срок</th>
    <th>Обновить</th>
    <th>Удалить</th>
</tr>

</thead>
<tbody>
<% @sales.each do | sale | %>
<tr class="gradeX">
    <td><%=sale.id %></td>
    <td><%=sale.name %></td>
    <td><%=sale.value %></td>
    <td><%=sale.term.to_s(:db) %></td>
    <td><%= link_to 'Обновить', admin_sale_edit_path(sale) %></td>
    <td><%= link_to 'Удалить', admin_sale_destroy_path(sale) , :method => 'delete', data: { confirm: 'Точно?' } %></td>
</tr>
<% end %>
</tbody>
<tfoot>
<tr>
    <th>id</th>
    <td>Имя</td>
    <td>%</td>
    <th>Срок</th>
    <th>Обновить</th>
    <th>Удалить</th>
</tr>
</tfoot>
</table>
</div>
</div>
</div>
</div>

</div>

