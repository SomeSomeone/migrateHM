<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Изменение Админской настройки</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <%= semantic_form_for @admin_option, :url => admin_admin_option_update_path(@admin_option) , :html => { :class => "form-horizontal"} do |f| %>
  
                    <div class="form-group">
                    <%= f.label  :value , "Значение" , class: "col-lg-12"%>
                        <div class="col-lg-12"><%= f.text_field :value, class: 'form-control' %>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-12">
                          <%= f.submit  "Изменить админскую настройку" , :class => "btn btn-sm btn-primary"  %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>