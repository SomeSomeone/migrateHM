
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Создание нового попапа</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <%= semantic_form_for @pop, :url => admin_pop_create_path(@pop) , :html => { :class => "form-horizontal"} do |f| %>
                    <p>Введите пустые поля</p>
                    <div class="form-group">
                    <%= f.label  :name , "Имя" , class: "col-lg-12"%>
                        <div class="col-lg-12"><%= f.text_field :name, class: 'form-control' %><span class="help-block m-b-none">Введите имя для  попапа</span>
                        </div>
                    </div>
                    <div class="form-group">
                    <%= f.label  :text , "Текст банера" , class: "col-lg-12"%>
                        <div class="col-lg-12"><%= f.text_area :text, as: :summernote , id: "summernote" %><span class="help-block m-b-none">Введите текст попапа</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                          <%= f.submit  "Создать попапа" , :class => "btn btn-sm btn-primary"  %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>