
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Изменение цвета</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <%= semantic_form_for @color, :url => admin_color_update_path(@color), :html => { :class => "form-horizontal" , multipart: true } do |f| %>
                    <div class="form-group">
                    <%= f.label  :name , "Имя" , class: "col-lg-12"%>
                        <div class="col-lg-12"><%= f.text_field :name, class: 'form-control' %><span class="help-block m-b-none">Введите имя для цвета</span>
                        </div>
                    </div>
                    <div class="form-group">
                    <%= f.label  :main_color_id , "Цвет" , class: "col-lg-12"%>

                        <div class="col-lg-12">
                          <%= f.select(:main_color_id, @main_color.collect { |p| [ p.name, p.id ] }, {} ,{ :class => "form-control m-b"}) %>
                          <span class="help-block m-b-none">Выберите к какой группе принадлежит цвет</span>
                        </div>
                    </div>
                    <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                      
                      <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                      <span class="input-group-addon btn btn-default btn-file"><span class="fileinput-new">Select file</span><span class="fileinput-exists">Change</span><%= f.file_field :img %></span>
                      <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                      </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                          <%= f.submit  "Изменить цвет" , :class => "btn btn-sm btn-primary"  %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>