
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Создание новой страницы</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <%= semantic_form_for @page, :url => admin_page_create_path(@page) , :html => { :class => "form-horizontal"} do |f| %>
                    <p>Введите пустые поля</p>
                     <div class="form-group">
                    <%= f.label  :link , "Ссылка" , class: "col-lg-12"%>
                        <div class="col-lg-12"><%= f.text_field :link, class: 'form-control' %><span class="help-block m-b-none">Введите ссылку для странички</span>
                        </div>
                    </div>
                     <div class="form-group">
                    <%= f.label  :name , "Имя" , class: "col-lg-12"%>
                        <div class="col-lg-12"><%= f.text_field :name, class: 'form-control' %><span class="help-block m-b-none">Введите имя для странички</span>
                        </div>
                    </div>
                     <div class="form-group">
                    <%= f.label  :order , "Порядок" , class: "col-lg-12"%>
                        <div class="col-lg-12"><%= f.text_field :order, class: 'form-control' %><span class="help-block m-b-none">Введите имя порядок для страницы</span>
                        </div>
                    </div>
                    <div class="form-group">
                    <%= f.label  :content , "Текст страницы" , class: "col-lg-12"%>
                        <div class="col-lg-12"><%= f.text_area :content, as: :summernote , id: "summernote" %><span class="help-block m-b-none">Введите текст страницы</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                          <%= f.submit  "Созданить страницу" , :class => "btn btn-sm btn-primary"  %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>